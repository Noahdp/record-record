generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Album {
  id              Int      @id // Using Discogs album ID as primary key
  title           String
  artist          String
  year            String?
  coverImageURL   String?
  format          String? // Stored as JSON string, will be parsed in app
  isMasterRelease Boolean? @default(false)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
